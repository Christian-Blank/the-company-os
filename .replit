
# Language detection
language = "bash"
run = "echo 'Company OS Documentation Repository - Use the file explorer to browse the project files'"

# Hide certain files from the file tree
hidden = [".git", ".gitignore"]

# File associations
[languages.markdown]
pattern = "**/*.md"

[languages.yaml]
pattern = "**/*.{yaml,yml}"

# Nix configuration
[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "echo 'Company OS Documentation Repository - Use the file explorer to browse the project files'"]
