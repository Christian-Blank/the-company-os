
# Language detection
language = "bash"

# Main command to run the project
run = "echo 'Company OS Documentation Repository - Use the file explorer to browse the project files'"

# Hide certain files from the file tree
hidden = [".git", ".gitignore"]

# File associations
[languages.markdown]
pattern = "**/*.md"

[languages.yaml]
pattern = "**/*.{yaml,yml}"

# Nix configuration
[nix]
channel = "stable-23.05"

[deployment]
run = ["echo", "This is a documentation repository"]
